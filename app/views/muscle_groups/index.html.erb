<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all muscle groups
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new muscle group
    </h2>

    <form action="/insert_muscle_group" method="post">
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create muscle group
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @muscle_groups.each do |muscle_group| %>
      <tr>
        <td>
          <%= muscle_group.id %>
        </td>

        <td>
          <%= muscle_group.name %>
        </td>

        <td>
          <%= time_ago_in_words(muscle_group.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(muscle_group.updated_at) %> ago
        </td>

        <td>
          <a href="/muscle_groups/<%= muscle_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
