<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @muscle_group.name %> Details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/muscle_groups" class="btn btn-block btn-outline-secondary">
          Go Back
        </a>
      </div>

      <div class="col">
        <a href="/delete_muscle_group/<%= @muscle_group.id %>" class="btn btn-block btn-outline-secondary">
          Delete Muscle Group
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @muscle_group.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@muscle_group.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@muscle_group.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit Muscle Group
    </h2>

    <form action="/modify_muscle_group/<%= @muscle_group.id %>"  method="post" >
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name_from_query" class="form-control" value="<%= @muscle_group.name %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update Muscle Group
      </button>
    </form>
  </div>
</div>

<hr>
