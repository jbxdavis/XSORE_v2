<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Lifts
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a New Lift
    </h2>

    <form action="/insert_lift" method="post">
      <div class="form-group">
        <label for="lift_name_box">
          Lift Name
        </label>

        <input type="text" id="lift_name_box" name="lift_name_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="category_from_query" class="form-control" placeholder="Push / Pull / Ab-Leg">
      </div>

      <div class="form-group">
        <label for="prim_mg_box">
          Primary Muscle Group
        </label>

        <input type="text" id="prim_mg_box" name="prim_mg_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="sec_mg_box">
          Secondary Muscle Group
        </label>

        <input type="text" id="sec_mg_box" name="sec_mg_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="def_sets_box">
          Default Sets
        </label>

        <input type="text" id="def_sets_box" name="def_sets_from_query" class="form-control" placeholder="Default is 8...">
      </div>

      <div class="form-group">
        <label for="def_reps_box">
          Default Reps
        </label>

        <input type="text" id="def_reps_box" name="def_reps_from_query" class="form-control" placeholder="Default is 8 for weighted, 20 for body weight.">
      </div>

      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="image_from_query" class="form-control" placeholder="Add an image link from the internet.">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create Lift
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Lift Name
        </th>

        <th>
          Category
        </th>

        <th>
          Primary Muscle Group
        </th>

        <th>
          Secondary Muscle Group
        </th>

        <th>
          Default Sets
        </th>

        <th>
          Default Reps
        </th>

        <th>
          Image
        </th>

        <th>
          Created At
        </th>

        <th>
          Updated At
        </th>

        <th>
        </th>
      </tr>

      <% @lifts.each do |lift| %>
      <tr>

        <td>
          <%= lift.lift_name %>
        </td>

        <td>
          <%= lift.category %>
        </td>

        <td>
          <% mg_id = lift.prim_mg %>
          <% mg_record = MuscleGroup.where({ :id => mg_id }).at(0) %>
          <%= mg_record.name %>
        </td>

        <td>
          <% if lift.sec_mg == nil %>
            <%= "None" %>
          <% else %>
            <% mg_id = lift.sec_mg %>
            <% mg_record = MuscleGroup.where({ :id => mg_id }).at(0) %>
            <%= mg_record.name %>
          <% end %>
        </td>

        <td>
          <%= lift.def_sets %>
        </td>

        <td>
          <%= lift.def_reps %>
        </td>

        <td>
          <img src="<%= lift.image %>" height="150">
        </td>

        <td>
          <%= time_ago_in_words(lift.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(lift.updated_at) %> ago
        </td>

        <td>
          <a href="/lifts/<%= lift.id %>">
            Show Details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
