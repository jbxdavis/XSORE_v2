<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Lifts
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
    <a href="/lifts" class="btn btn-block btn-outline-secondary">
      Back
    </a>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a New Lift
    </h2>

    <form action="/insert_lift" method="post">
      <div class="form-group">
        <label for="lift_name_box">
          Lift Name
        </label>

        <input type="text" id="lift_name_box" name="lift_name_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="category_select">
          Category
        </label>

      <select class="form-control" id="category_select" name="category_from_query">
        <option value="push".to_s>Push</option>
        <option value="pull".to_s>Pull</option>
        <option value="ab_leg".to_s>Abs / Legs</option>
      </select>
      </div>

      <div class="form-group">
        <label for="prim_mg_box">
          Primary Muscle Group
        </label>

      <select class="form-control" id="prim_mg_box" name="prim_mg_from_query">
        <% MuscleGroup.all.order({ :name => :asc }).each do |the_mg| %>
          <option value=<%= the_mg.id %> ><%= the_mg.name %></option>
        <% end %>
      </select>
      </div>

      <div class="form-group">
        <label for="sec_mg_box">
          Secondary Muscle Group
        </label>

      <select class="form-control" id="sec_mg_box" name="sec_mg_from_query">
          <option value=<%= nil %></option>
        <% MuscleGroup.all.order({ :name => :asc }).each do |the_mg| %>
          <option value=<%= the_mg.id %> ><%= the_mg.name %></option>
        <% end %>
      </select>
      </div>

      <div class="form-group">
        <label for="def_sets_box">
          Default Sets
        </label>

        <input type="text" id="def_sets_box" name="def_sets_from_query" class="form-control" placeholder="Default is 8...">
      </div>

      <div class="form-group">
        <label for="def_reps_box">
          Default Reps
        </label>

        <input type="text" id="def_reps_box" name="def_reps_from_query" class="form-control" placeholder="Default is 8 for weighted, 20 for body weight.">
      </div>

      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="image_from_query" class="form-control" placeholder="Add an image link from the internet.">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create Lift
      </button>
    </form>
  </div>
</div>

<hr>
