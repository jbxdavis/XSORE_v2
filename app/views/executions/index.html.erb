<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all executions
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a New Execution
    </h2>

    <form action="/insert_execution" method="post">
      <div class="form-group">
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="date_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="lift_id_box">
          Lift
        </label>

        <input type="text" id="lift_id_box" name="lift_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="sets_box">
          Sets
        </label>

        <input type="text" id="sets_box" name="sets_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="reps_box">
          Reps
        </label>

        <input type="text" id="reps_box" name="reps_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="weight_box">
          Weight
        </label>

        <input type="text" id="weight_box" name="weight_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create execution
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          User
        </th>

        <th>
          Lift
        </th>

        <th>
          Sets
        </th>

        <th>
          Reps
        </th>

        <th>
          Weight
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @executions.each do |execution| %>
      <tr>
        <td>
          <%= execution.id %>
        </td>

        <td>
          <%= execution.date %>
        </td>

        <td>
          <%= execution.user_id %>
        </td>

        <td>
          <%= execution.lift_id %>
        </td>

        <td>
          <%= execution.sets %>
        </td>

        <td>
          <%= execution.reps %>
        </td>

        <td>
          <%= execution.weight %>
        </td>

        <td>
          <%= time_ago_in_words(execution.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(execution.updated_at) %> ago
        </td>

        <td>
          <a href="/executions/<%= execution.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
