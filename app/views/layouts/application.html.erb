              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/lifts">Lifts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/executions">Executions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/muscle_groups_no_form">Muscle Groups</a>
            </li>
            <% if @current_user == nil %>
              <li class="nav-item">
                <a class="nav-link" href="/user_sign_up">Sign Up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user_sign_in">Sign In</a>
              </li>
            <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/user_sign_out">Sign Out</a>
